        <label>Adult?
          <input type="checkbox" checked="checked" name="adult">
        </label>
        <label>City
          <select name="city" id="city">
            <option value="TelAviv">Tel Aviv</option>
            <option value="Ashkelon">Ashkelon</option>
            <option value="BeerSheva">Beer Sheva</option>
            <option value="Hadera">Hadera</option>
          </select>
      </label>
        <br/>
         <input type="submit">

      </form>
  </body>
</html>
